<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="Person" table="person">
	
	<id name="id" column="id" type="int">
		<generator class="native"/>
	</id>
	
	<property name="name.firstName" column="first_name"	type="string"	/>
	<property name="name.lastName" column="last_name"	type="string"	/>
	<property name="name.middleName" column="middle_name"	type="string"	/>
	<property name="birthDay" column="birth_day"	type="date"	/>
	<property name="dateHired" column="date_hired"	type="date"	/>
	<property name="gwa" column="gwa"	type="double"	/>
	<property name="gender" column="gender" type="string" />
	<property name="employed" column="employed" type="true_false" />
	<property name="school" column="school" type="string" />
	<many-to-one name="address" column="address" class="Address" not-null="true"/>
	<list name = "contactInfo" cascade="all">
		<key column="person_id"/>
		<list-index column="idx"/>
		<one-to-many name="contact" column="contact" class="Contact" not=null="true"/>
	</list>
</class>	

</hibernate-mapping>
